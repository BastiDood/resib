{
    "useTabs": false,
    "arrowParens": "avoid",
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        { "files": "*.yml", "options": { "tabWidth": 2 } },
        { "files": "{j,t}sconfig.json", "options": { "parser": "jsonc" } }
    ]
}
